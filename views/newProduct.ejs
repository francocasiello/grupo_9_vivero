<!DOCTYPE html>
<html lang="en">
    <!-- head-->
    <%- include("./partials/head.ejs", { tituloPagina: "Nuevo producto"}) %>
<body>
     <!-- header-->
     <%- include("./partials/header.ejs") %>
    
     <% if (locals.errors) { %>                        
        <% for( let oneError in errors) { %>
        <% } %>
     <% } %>
     
    <main>
    <section class = "login">
         <h2>
            AGREGÁ UN PRODUCTO
        </h2>
          <h3>
           Agregá un nuevo producto para vender. ¡Cuanta más información pongas e imagenes más pronto se venderá!
        </h3>
    </section>
    <section class = formulariologin id= "formularioProducto">
        <div class = formulario>
            <form action="/products" method="POST" class="formulario-registracion" enctype="multipart/form-data">
                <!-- <form action="/" method="GET" class="formulario-registracion">-->
                    <div class = "control-formulario">
                        <input type="text" name="name" placeholder="Nombre del Producto" class="control" id ="name">
                        <span class="feedback"></span>
                        <% if (locals.errors && errors.name) { %>                        
                            <p class = errores><%= errors.name.msg %></p>
                        <% } %>
                    </div>
                    <div class = "control-formulario">
                        <input type="text" name="description" placeholder="Descripción" class="control">
                    </div>

                    <div class = "control-formulario">
                    <label>Subir imagen:</label></div>
                    <div class = "control-formulario"> 
                        <label class= boton-formulario  style = "color: white" for = "image">Elegi tu foto</label>
                        <input type="file" name ="image" id = "image" accept=".jpg " multiple>
                     </div>

                     <div class = "control-formulario">
                        <input type="number" name="price" placeholder="Precio" class="control">
                    </div>
                    <div class = "control-formulario">
                        <p>Categoría</p>
                        <div class = "control-tipoplanta">
                        <select name = "categoria_id">
                            <% categoria.forEach((categoria) => { %>
                            <option value="<%= categoria.id %>"><%= categoria.name %></option>
                            <% }) %>
                        </select>
                     </div>
                     </div>
                    <button type="submit" class="boton-formulario">Agregar</button>
                    <button type="reset" class="boton-formulario">Borrar</button>
                </form>
        </div>
         <div class = imagenformularionuevoproducto>
             </div>
             
    </section>
    </main>


       <!-- footer-->
       <%- include("./partials/footer.ejs") %>
       <script src="/js/newProductValidation.js"></script>
  </body>
</html>